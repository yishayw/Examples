<?xml version="1.0" encoding="utf-8"?>
<js:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:js="library://ns.apache.org/royale/basic"
				xmlns:ns="library://ns.apache.org/royale/svg"
				>
	<js:valuesImpl>
		<js:SimpleCSSValuesImpl />
	</js:valuesImpl>	
	<js:beads>
		<js:BrowserResizeHandler/>
	</js:beads>	
	<js:initialView>
		<js:View>
			<js:Container width="600" height="60" style="background-color: blue;">
				<js:beads>
					<js:OverflowViewport/>
					<js:OneFlexibleChildVerticalLayout flexibleChild="myList"/>
					<js:ScrollingFlexibleChild/>
				</js:beads>
				<js:Container width="100%" height="10" style="background-color: yellow"/>
				<js:VContainer width="100%" id="myList" style="background-color: #666666">
					<js:beads>
						<js:ScrollingViewport/>
					</js:beads>
					<js:Label text="label 1"/>
					<js:Label text="label 2"/>
					<js:Label text="label 3"/>
					<js:Label text="label 4"/>
				</js:VContainer>
			</js:Container>
		</js:View>
	</js:initialView>
</js:Application>
