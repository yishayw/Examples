<?xml version="1.0" encoding="utf-8"?>
<s:Application 
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.apache.org/royale/spark"
	creationComplete="init()"
	xmlns:mx="library://ns.apache.org/royale/mx"
	>
	<fx:Script>
		<![CDATA[
			private function init():void
			{
				myGrandChildGroup.height = 100;
			}
		]]>
	</fx:Script>		
	<s:VGroup id="myVGroup"
		style="background-color: red; alpha: 0.5"
		>
		<s:Group id="myChildGroup" style="background-color: blue; alpha: 0.5" height="100%" width="100%">
			<s:Group id="myGrandChildGroup" style="background-color: yellow; alpha: 0.5" width="100%"/>
		</s:Group>
		<s:Button width="100%" height="20"/>
	</s:VGroup>
</s:Application>
