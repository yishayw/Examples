<?xml version="1.0" encoding="utf-8"?>
<js:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:js="library://ns.apache.org/royale/basic"
				applicationComplete="application1_applicationCompleteHandler(event)"
				>
	<fx:Script>
		<![CDATA[
			import org.apache.royale.events.Event;
			
			protected function application1_applicationCompleteHandler(event:Event):void
			{
				myService.send();
			}
			
			protected function myService_completeHandler(event:Event):void
			{
				var a:String = myService.data;
				trace("a: " + a);
				XML.ignoreWhitespace = false;
				var b:XML = new XML(a);
				trace("b: " + b.toString());
				var children:XMLList = b.children();
				trace("c: " + children.toString());
			}
			
		]]>
	</fx:Script>
	<js:beads>
		<js:HTTPService id="myService" url="http://localhost:3001/assets/my.xml" complete="myService_completeHandler(event)"/>
	</js:beads>
	<js:valuesImpl>
		<js:SimpleCSSValuesImpl />
	</js:valuesImpl>	
	
	<js:initialView>
		<js:View>
			<js:Label text="Hello World"/>	
		</js:View>
	</js:initialView>
</js:Application>
