<?xml version="1.0" encoding="utf-8"?>
<js:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:js="library://ns.apache.org/royale/basic" xmlns:ns="library://ns.apache.org/royale/svg"
				>
	<fx:Script>
		<![CDATA[
			import org.apache.royale.events.MouseEvent;
			
			protected function textbutton1_clickHandler(event:MouseEvent):void
			{
				mainEffect.play();
			}
			
		]]>
	</fx:Script>
	<fx:Style>
		@namespace ns "library://ns.apache.org/royale/svg";
		@namespace js "library://ns.apache.org/royale/basic";
		
		global {
			iEffectTimer: ClassReference("org.apache.royale.utils.EffectTimer");
		}
		
	</fx:Style>
	
	<fx:Declarations>
		<js:Parallel id="mainEffect" duration="2000">
			<js:Move xBy="200" target="myContainer"/>
			<js:Fade alphaFrom="1" alphaTo="0" target="myContainer"/>
		</js:Parallel>
	</fx:Declarations>
	<js:valuesImpl>
		<js:SimpleCSSValuesImpl />
	</js:valuesImpl>	
	
	<js:initialView>
		<js:View>
			<js:Container width="200" id="myContainer" height="200">
				<js:TextButton click="textbutton1_clickHandler(event)" text="Click"/>
				<js:style>
					<js:SimpleCSSStyles backgroundColor="red"/>
				</js:style>
			</js:Container>
		</js:View>
	</js:initialView>
</js:Application>
