<?xml version="1.0" encoding="utf-8"?>
<js:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:js="library://ns.apache.org/royale/basic" xmlns:ns="library://ns.apache.org/royale/svg"
				xmlns:mdl="library://ns.apache.org/royale/mdl"
				>
	<fx:Script>
		<![CDATA[
			import org.apache.royale.events.MouseEvent;
			import org.apache.royale.html.Label;
			
			protected function textbutton1_clickHandler(event:MouseEvent):void
			{
				var newLabel:Label = new Label();
				newLabel.text = "new";
				myContainer.addElement(newLabel);
			}
			
		]]>
	</fx:Script>
	
	
	<js:valuesImpl>
		<js:SimpleCSSValuesImpl />
	</js:valuesImpl>	
	
	<js:initialView>
		<js:View width="100%" height="100%">
			<js:Container width="200" height="200" id="myContainer">
				<js:style>
					<js:SimpleCSSStyles backgroundColor="red"/>
				</js:style>
				<js:beads>
					<js:StyleInheritanceWithObserverBead styleName="backgroundColor"/>
				</js:beads>
				<js:TextButton text="hello" x="50" click="textbutton1_clickHandler(event)" y="50"/>
			</js:Container>	
		</js:View>
	</js:initialView>
</js:Application>
