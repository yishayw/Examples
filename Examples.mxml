<?xml version="1.0" encoding="utf-8"?>
<js:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:js="library://ns.apache.org/royale/basic" xmlns:ns="library://ns.apache.org/royale/svg"
				>
	
	<js:valuesImpl>
		<js:SimpleCSSValuesImpl />
	</js:valuesImpl>	
	
	<js:initialView>
		<js:View>
			<ns:Rect x="300" y="300" width="100" height="100">
				<ns:beads>
					<ns:Filter/>
					<ns:InvertFilterElement/>
					<ns:OffsetFilterElement dx="10" dy="10"/>
					<ns:BlurFilterElement stdDeviation="3" blurResult="blurResult"/>
					<ns:ColorMatrixFilterElement colorMatrixResult="colorMatrixResult" red="255"/>
					<ns:SpreadFilterElement spread="100" spreadResult="spreadResult"/> 
					<ns:CompositeFilterElement operator="in" in2="SourceAlpha" result="hi"/>
					<ns:BlendFilterElement in2="SourceGraphic" in="hi"/>
<!--					<ns:DropShadowFilter dx="10" dy="10" stdDeviation="3" green="255" opacity="0.5" blue="128" spread="2"/>
-->				</ns:beads>
				<ns:fill>
					<js:SolidColor color="blue"/>
				</ns:fill>
			</ns:Rect>
		</js:View>
	</js:initialView>
</js:Application>
