<?xml version="1.0" encoding="utf-8"?>
<s:Skin 
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:mx="library://ns.apache.org/royale/mx"
	xmlns:s="library://ns.apache.org/royale/spark"
	creationComplete="init()"
	width="100%"
	>

	<fx:Metadata>
		<![CDATA[ 
			[HostComponent("spark.components.ButtonBar")]		
		]]>
	</fx:Metadata>

	<s:states>
		<s:State name="normal" />
		<s:State name="disabled" />
	</s:states>
	<fx:Script>
		<![CDATA[ 
			import spark.components.ButtonBarButton;
			import mx.core.ClassFactory;
			//import cc.sitemaker.pagemasterswitcher.view.components.skins.PageMasterSwitcherIndentedLastSkin;
			//import cc.sitemaker.pagemasterswitcher.view.components.skins.PageMasterSwitcherIndentedTabSkin;
			//import cc.sitemaker.pagemasterswitcher.view.components.skins.PageMasterSwitcherTabButtonSkin;
			[Bindable]
			public var lastButton:mx.core.ClassFactory = new mx.core.ClassFactory(ButtonBarButton);
			[Bindable]
			public var middleButton:mx.core.ClassFactory = new mx.core.ClassFactory(ButtonBarButton);
			[Bindable]
			public var firstButton:mx.core.ClassFactory = new mx.core.ClassFactory(ButtonBarButton);

			private function init():void
			{
				firstButton.properties = {"percentWidth": 100};
				//firstButton.skinClass = cc.sitemaker.pagemasterswitcher.view.components.skins.PageMasterSwitcherTabButtonSkin;
				middleButton.properties = {"percentWidth": 100};
				//middleButton.skinClass = cc.sitemaker.pagemasterswitcher.view.components.skins.PageMasterSwitcherIndentedTabSkin;
				lastButton.properties = {"percentWidth": 100};
				//lastButton.skinClass = cc.sitemaker.pagemasterswitcher.view.components.skins.PageMasterSwitcherIndentedLastSkin;
			}

		]]>
	</fx:Script>

	<s:DataGroup 
		id="contentGroup"
		width="100%"
		height="100%" >
		<s:layout>
			<s:ButtonBarHorizontalLayout gap="-1" />
		</s:layout>
	</s:DataGroup>

</s:Skin>
