<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer 
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:mx="library://ns.apache.org/royale/mx"
	xmlns:s="library://ns.apache.org/royale/spark"
	height="26"
	width="100%"
	>


	<s:Group 
		width="100%"
		height="26"
		>
		<s:Label 
			id="labelDisplay"
			fontSize="13"
			text="{data}"
			doubleClickEnabled="true"
			width="105"
			height="20"
			top="7"
			left="5"
			maxDisplayedLines="1"
			/>
	</s:Group>

	<!-- draw a small roundish rectangle with the number of product on the right of the itemrenderer .. -->
	<s:Group 
		right="4"
		top="5"
		minWidth="20"
		visible="false"
		>
		<s:Rect 
			top="0"
			bottom="0"
			left="0"
			right="0"
			radiusX="3"
			radiusY="3"
			>
			<s:stroke>
				<s:SolidColorStroke 
					color="#000000"
					alpha="0"
					/>
			</s:stroke>
			<s:fill>
				<s:SolidColor 
					id="productCountContainer"
					color="#000000"
					alpha="0.12"
					/>
			</s:fill>
		</s:Rect>
		<s:Label 
			id="productCountLabel"
			top="3"
			fontSize="10"
			minWidth="20"
			textAlign="center"
			paddingRight="3"
			paddingTop="2"
			paddingBottom="2"
			paddingLeft="3"
			/>
	</s:Group>
</s:ItemRenderer>
