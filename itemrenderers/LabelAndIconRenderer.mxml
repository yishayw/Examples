<?xml version="1.0" encoding="utf-8"?>
<js:MXMLItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
					 xmlns:js="library://ns.apache.org/royale/basic"
					 width="100%">
	<fx:Script>
		<![CDATA[
			override public function set data(value:Object):void
			{
				super.data = value;
				var str:String = value as String;
				myLabel.text = str;
				myImage.src = "icons/" + str + ".png";
			}
			
		]]>
	</fx:Script>
	<fx:Style>
	</fx:Style>
	<js:beads>
		<js:OneFlexibleChildHorizontalLayout flexibleChild="flexibleChild" />
	</js:beads>
	<js:Label id="myLabel"/>
	<js:Spacer id="flexibleChild"/>
	<js:Image id="myImage"/>
</js:MXMLItemRenderer>
