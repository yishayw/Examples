<js:MXMLItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
                     xmlns:js="library://ns.apache.org/royale/basic"
                     width="100%">
    <fx:Script>
        <![CDATA[

			override public function set data(value:Object):void
			{
				super.data = value;
				myLabel.text = value as String;
				myTooltip.toolTip = data + " " + data + " ";
			}
        ]]>
    </fx:Script>
    <js:beads>
        <js:ItemRendererDataBinding/>
        <js:ToolTipBead id="myTooltip" />
        <js:ToolTipRemovalWhenItemRemoved tooltip="{myTooltip}"/>
    </js:beads>
    <js:Label id="myLabel"/>
</js:MXMLItemRenderer>
